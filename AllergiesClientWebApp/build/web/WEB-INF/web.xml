<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LogoutC</servlet-name>
        <servlet-class>controller.LogoutC</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterC</servlet-name>
        <servlet-class>controller.RegisterC</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginC</servlet-name>
        <servlet-class>controller.LoginC</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileC</servlet-name>
        <servlet-class>controller.ProfileC</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterAllergyC</servlet-name>
        <servlet-class>controller.RegisterAllergyC</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckLocation</servlet-name>
        <servlet-class>CheckLocation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterVisitC</servlet-name>
        <servlet-class>controller.RegisterVisitC</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutC</servlet-name>
        <url-pattern>/LogoutC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterC</servlet-name>
        <url-pattern>/RegisterC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginC</servlet-name>
        <url-pattern>/LoginC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileC</servlet-name>
        <url-pattern>/ProfileC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterAllergyC</servlet-name>
        <url-pattern>/RegisterAllergyC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckLocation</servlet-name>
        <url-pattern>/CheckLocation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterVisitC</servlet-name>
        <url-pattern>/RegisterVisitC</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>indexJSP.jsp</welcome-file>
    </welcome-file-list>
</web-app>
